<h1>Create Note </h1>

<%= form_with scope: :article, url: notes_path, local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Title' %>
  </p>
  <p>
    <%= form.label :content %>
    <%= form.text_field :content, placeholder: 'Content' %>
  </p>
  <p>
    <%= form.submit value: "Create Note" %>
  </p>
<% end %>